{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "target": "esNext",
    "module": "esNext",
    "moduleResolution": "bundler",
    "lib": ["DOM", "ES2022"],
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true
  },
  "include": ["src/**/*.ts", "src/**/*.js"]
}
