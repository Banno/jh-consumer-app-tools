{
  "compilerOptions": {
    "rootDir": "./",
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": ["DOM", "ES2022"],
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "declaration": false,
    "noImplicitThis": true,
    "noUnusedParameters": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "useDefineForClassFields": false
  },
  "include": ["global.d.ts", "**/*.js", "**/*.ts", "**/*.types.ts"],
  "exclude": ["dist/**/*", ".vitest/**/*"]
}
