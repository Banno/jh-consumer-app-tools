{
  "name": "@jack-henry/jh-consumer-app-tools",
  "license": "Apache-2.0",
  "private": true,
  "workspaces": {
    "packages": [
      "projects/*",
      "projects/create-consumer-app/example-consumer-app"
    ]
  },
  "scripts": {
    "release": "HUSKY=0 nx release --yes --verbose",
    "nx:release:dry": "HUSKY=0 nx release --dry-run --verbose",
    "typecheck": "nx run-many --target=typecheck",
    "build": "nx run-many --target=build --exclude=example-consumer-app,example-development-sandbox",
    "test": "nx run-many --target=test --parallel",
    "prepare": "husky install",
    "postinstall": "npm run build",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@commitlint/config-workspace-scopes": "^20.2.0",
    "@nx/js": "^22.4.0",
    "eslint": "^9.39.3",
    "husky": "^8.0.3",
    "lint-staged": ">=10",
    "nx": "22.4.0",
    "prettier": "^3.1.3"
  },
  "resolutions": {
    "js-yaml@4.1.0": "^4.1.1"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional",
      "@commitlint/config-workspace-scopes"
    ],
    "rules": {
      "header-max-length": [
        2,
        "always",
        120
      ]
    }
  },
  "packageManager": "yarn@4.7.0"
}
