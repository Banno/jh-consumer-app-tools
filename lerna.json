{
  "npmClient": "yarn",
  "version": "independent",
  "changelogPreset": "conventionalcommits",
  "command": {
    "publish": {
      "ignoreChanges": ["*.md"],
      "message": "chore: publish changed packages",
      "registry": "https://registry.npmjs.org",
      "conventionalCommits": true
    },
    "version": {
      "allowBranch": ["master"]
    }
  },
  "$schema": "node_modules/lerna/schemas/lerna-schema.json"
}
